@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*
    view model koristimo kada zelimo prikazati vise klasa u jednom view-u;
*@

@{ 
    // ovu tehniku mozemo koristiti za DINAMIČKO renderiranje bilo kojeg atributa
    var classNmae = Model.Customers.Count > 5 ? "popular" : null;
}
<h2 class=@classNmae>@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before</text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}
