@model Vidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
@{
    if (Model.DateOfBirth is null)
    {
        <li>MembershipType: @Model.MembershipType.Name</li>
    }
    else
    {
        <li>Membership Type: @Model.MembershipType.Name</li>
        <li>Date Of Birth: @Model.DateOfBirth.Value.ToShortDateString()</li>
    }
}

