@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@{
    if (Model.Count() == 0)
    {
        <p>We don't have any customer yet!</p>
    }

    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Customer</th>
                    <th>Discount Rate</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id }, null)</td>
                        <td>@customer.MembershipType.DiscountRate%</td> @*ovo ce puknit jer se ne loadaju povezani objekti vec samo customer*@

                        @*kada loadamo CUSTOMERS i njegove povezane OBJEKTE --> EAGER LOADING
                            ZA TO MORAMO KORISTITI INCLUDE METODU U CONTROLORU i moramo imortat
                            USING SYSTEM.DATA.ENTITY
                            OVDE U INCLUDE ISTO IDE LAMBDA EXPRESSION *@

                    </tr>
                }
            </tbody>
        </table>
    }
}


